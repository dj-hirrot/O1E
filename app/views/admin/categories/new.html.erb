<div class="container">
  <h2>カテゴリ新規登録</h2>
  <%= form_with model: @category, url: admin_categories_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :code %>
      <%= f.text_field :code,
        class: "form-control #{'is-invalid' if @category.errors.messages[:code].any?}",
        autofocus: true,
        autocomplete: "code" %>
      <% @category.errors.messages[:code].each do |error| %>
        <div class="invalid-feedback"><%= "カテゴリコード#{error}" %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name,
        class: "form-control #{'is-invalid' if @category.errors.messages[:name].any?}",
        autofocus: true,
        autocomplete: "name" %>
      <% @category.errors.messages[:name].each do |error| %>
        <div class="invalid-feedback"><%= "カテゴリ名#{error}" %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description,
        class: "form-control #{'is-invalid' if @category.errors.messages[:description].any?}",
        autofocus: true,
        autocomplete: "description" %>
      <% @category.errors.messages[:description].each do |error| %>
        <div class="invalid-feedback"><%= "説明文#{error}" %></div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: 'btn btn-dark' %>
    </div>
  <% end %>
</div>
