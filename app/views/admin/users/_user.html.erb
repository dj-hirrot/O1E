<tr>
  <th scope="row"><%= user.id %></th>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td>
    <% case user.role_level %>
    <% when 'general' %>
      <span class="badge badge-light">一般</span>
    <% when 'viewer' %>
      <span class="badge badge-info">閲覧者</span>
    <% when 'admin' %>
      <span class="badge badge-warning">管理者</span>
    <% when 'superadmin' %>
      <span class="badge badge-danger">Hiroto Shibutani</span>
    <% end %>
  </td>
  <td>
    <% if user.activated? %>
      <span class="badge badge-success">確認済み</span>
    <% else %>
      <span class="badge badge-warning">未確認</span>
    <% end %>
  </td>
  <% if superadmin? %>
    <td><%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-dark' %></td>
    <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: "#{user.name}を本当に削除しますか？" }, class: 'btn btn-dark' %></td>
  <% end %>
</tr>
