<div class="container">
  <h2>O1E にログインする</h2>
  <%= form_with model: @user, scope: :session, url: logins_path, local: true, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email,
        class: "form-control",
        autofocus: true,
        autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password,
        class: "form-control",
        autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: 'btn btn-light' %>
    </div>
  <% end %>
</div>
