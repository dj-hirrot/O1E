<div class="container">
  <div class="jumbotron">
    <h1><%= @category.name %></h1>
    <p><%= @category.description %></p>
    <%= form_with(model: @subject, url: category_subjects_path(@category.code), id: 'new_subject_form', remote: true) do |f| %>
      <div class="row">
        <div class="col-md-8">
          <div class="form-group row">
            <%= f.label :name, '科目名', class: 'text-md-right col-sm-2 col-form-label col-form-label' %>
            <div class="col-sm-10">
              <%= f.text_field :name, autofocus: true, placeholder: '科目名', class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <div class="form-group row">
            <%= f.label :description, '説明文', class: 'text-md-right col-sm-2 col-form-label col-form-label' %>
            <div class="col-sm-10">
              <%= f.text_area :description, autofocus: true, placeholder: '説明文', class: 'form-control limit-height' %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.submit '科目を追加する', class: 'btn btn-light' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-hover text-nowrap">
      <thead class="thead-light">
        <tr>
          <th width="150px">科目名</th>
          <th width="500px">説明文</th>
          <th width="500px">進捗率</th>
          <th colspan="2" width="500px"></th>
        </tr>
      </thead>
      <tbody id="subjects_table">
      </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="errors_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger">
        <h5 class="modal-title text-white" id="errors_modal_title"><b>エラーが発生しました</b></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modal-body">
        <ul id="errors_modal_items">
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
