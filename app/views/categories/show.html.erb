<div class="container">
  <div class="jumbotron">
    <h1><%= @category.name %></h1>
    <p><%= @category.description %></p>
    <%= form_with(model: @subject, url: category_subjects_path(@category.code), id: 'new_subject_form', remote: true) do |f| %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="col-md-6">
          <%= f.submit '科目を追加する', class: 'btn btn-light' %>
        </div>
      </div>
    <% end %>
  </div>

  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="row">タスク名</th>
      </tr>
    </thead>
    <tbody id="subjects_table">
    </tbody>
  </table>
</div>

<div class="modal fade" id="errors_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger">
        <h5 class="modal-title text-white" id="errors_modal_title"><b>エラーが発生しました</b></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modal-body">
        <ul id="errors_modal_items">
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
