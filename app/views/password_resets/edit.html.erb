<div class="container">
  <h2>パスワードを再設定する</h2>
  <%= form_with model: @user, url: password_reset_path, local: true do |f| %>
    <%= hidden_field_tag :email, @user.email %>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password,
        class: "form-control #{'is-invalid' if @user.errors.messages[:password].any?}",
        autocomplete: "new-password" %>
      <% @user.errors.messages[:password].each do |error| %>
        <div class="invalid-feedback"><%= "パスワード#{error}" %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation,
        class: "form-control #{'is-invalid' if @user.errors.messages[:password_confirmation].any?}",
        autocomplete: "new-password" %>
      <% @user.errors.messages[:password_confirmation].each do |error| %>
        <div class="invalid-feedback"><%= "確認用パスワード#{error}" %></div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードを再設定する", class: 'btn btn-light' %>
    </div>
  <% end %>
</div>
