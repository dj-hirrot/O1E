<div class="container">
  <div class="jumbotron">
    <h1><%= @subject.name %></h1>
    <p><%= @subject.description %></p>
    <%= form_with(model: @task, url: category_subject_tasks_path(@category.code, @subject), id: 'new_task_form', scope: 'task', remote:true) do |f| %>
      <div class="row">
        <div class="col-md-8">
          <div class="form-group row">
            <%= f.label :name, 'タスク名', class: 'text-md-right col-sm-2 col-form-label col-form-label' %>
            <div class="col-sm-10">
              <%= f.text_field :name, autofocus: true, placeholder: 'タスク名', class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <div class="form-group row">
            <%= f.label :description, '説明文', class: 'text-md-right col-sm-2 col-form-label col-form-label' %>
            <div class="col-sm-10">
              <%= f.text_area :description, autofocus: true, placeholder: '説明文', class: 'form-control limit-height' %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.submit 'タスクを追加する', class: 'btn btn-light' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-hover text-nowrap">
      <thead class="thead-light">
        <tr>
          <th>タスク名</th>
          <th>説明文</th>
          <th>完了</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody id="tasks_table">
      </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="errors_modal" tabindex="1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger">
        <h5 class="modal-title text-white" id="errors_modal_title"><b>エラーが発生しました</b></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modal-body">
        <ul id="errors_modal_items">
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="edit_modal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="edit_modal_title">
</div>
