<div class="container">
  <div class="jumbotron">
    <h1><%= @subject.name %></h1>
    <p><%= @subject.description %></p>
    <%= form_with model: @task, url: category_subject_tasks_path(@category.code, @subject), remote:true do |f| %>
      <div class="row">
        <div class="col-md-8">
          <div class="form-group row">
            <%= f.label :name, 'タスク名', class: 'text-md-right col-sm-2 col-form-label col-form-label' %>
            <div class="col-sm-10">
              <%= f.text_field :name, autofocus: true, placeholder: 'タスク名', class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <div class="form-group row">
            <%= f.label :description, '説明文', class: 'text-md-right col-sm-2 col-form-label col-form-label' %>
            <div class="col-sm-10">
              <%= f.text_area :description, autofocus: true, placeholder: '説明文', class: 'form-control limit-height' %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.submit 'タスクを追加する', class: 'btn btn-light' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-hover text-nowrap">
      <thead class="thead-light">
        <tr>
          <th width="150px">科目名</th>
          <th width="500px">説明文</th>
          <th width="500px">進捗率</th>
          <th colspan="2" width="500px"></th>
        </tr>
      </thead>
      <tbody id="subjects_table">
      </tbody>
    </table>
  </div>
</div>
